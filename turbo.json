{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["GH_TOKEN"],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "dev:types": {
      "persistent": true,
      "cache": false
    },
    "build:types": {
      "cache": false
    },
    "@connnect/desktop#build": {
      "dependsOn": ["^build:types"],
      "cache": false,
      "env": [
        "GH_TOKEN",
        "CSC_LINK",
        "CSC_KEY_PASSWORD",
        "APPLE_ID",
        "APPLE_APP_SPECIFIC_PASSWORD"
      ]
    },
    "build": {
      "env": [
        "DATABASE_URL",
        "ENCRYPTION_SECRET",
        "BETTER_AUTH_SECRET",
        "STRIPE_SECRET_KEY",
        "ANTHROPIC_API_KEY",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ],
      "dependsOn": ["^build"],
      "cache": false
    },
    "check-types": {}
  }
}
