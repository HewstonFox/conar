{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["GH_TOKEN"],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "dev:types": {
      "persistent": true,
      "cache": false
    },
    "build:types": {
      "cache": false
    },
    "@connnect/desktop#build": {
      "dependsOn": ["^build:types"],
      "cache": false
    },
    "build": {
      "env": [
        "VITE_API_URL",
        "ENCRYPTION_SECRET",
        "UPDATES_TOKEN",
        "STRIPE_SECRET_KEY",
        "DATABASE_URL",
        "STRIPE_WEBHOOK_SECRET",
        "CLERK_SECRET_KEY",
        "STRIPE_MONTHLY_PRICE_ID",
        "STRIPE_YEARLY_PRICE_ID",
        "CLERK_WEBHOOK_SECRET",
        "BETTER_AUTH_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ],
      "dependsOn": ["^build"],
      "cache": false
    },
    "check-types": {},
    "drizzle:generate": {},
    "drizzle:migrate": {}
  }
}
