{
  "extends": "@connnect/tsconfig/start.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@connnect/ui/*": ["../../packages/ui/src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./.types"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".types"]
}
