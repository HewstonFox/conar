{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Connnect",
  "version": "0.1.0",
  "identifier": "com.connnect.app",
  "build": {
    "devUrl": "http://localhost:3100",
    "frontendDist": "../dist"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["connnect"]
      }
    },
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhCNTQ3NDI4MDVCQ0MzNDUKUldSRnc3d0ZLSFJVaXlvVUdmdjhHRCt1SFJuaTB2Z1BqSk5kNlV4UHlDUExRM1pldXdkS0I2bXoK",
      "endpoints": ["https://connnect.app/api/releases/latest"],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Connnect",
        "width": 1280,
        "height": 720,
        "acceptFirstMouse": true,
        "maximized": true,
        "minWidth": 500,
        "minHeight": 300
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Developer Tools",
    "createUpdaterArtifacts": true,
    "macOS": {
      "minimumSystemVersion": "13.0"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/app"
    ]
  }
}
