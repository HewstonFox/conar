{
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.21",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "prepare": "husky && bun scripts/setup-dev.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "dev": "turbo run dev",
    "build:desktop": "turbo run @conar/desktop#build",
    "build:electron": "turbo run @conar/desktop#build:electron",
    "build:web": "turbo run @conar/web#build",
    "start:web": "cd apps/web && bun run start",
    "start:api": "cd apps/api && bun run start",
    "drizzle:generate": "turbo run drizzle:generate",
    "drizzle:migrate": "turbo run drizzle:migrate",
    "check-types": "turbo run check-types",
    "update": "taze -r -I major"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint-react/eslint-plugin": "^1.52.9",
    "@posthog/cli": "^0.4.3",
    "@types/bun": "^1.2.21",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "npm-run-all2": "^8.0.4",
    "taze": "^19.3.0",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "@number-flow/react": "^0.5.10",
      "@remixicon/react": "^4.6.0",
      "@tanstack/react-query": "^5.85.5",
      "@tanstack/react-query-devtools": "^5.85.5",
      "@tanstack/react-router": "^1.131.28",
      "@tanstack/react-router-devtools": "^1.131.28",
      "@types/react": "^19.1.12",
      "@types/react-dom": "^19.1.9",
      "@vitejs/plugin-react": "^5.0.2",
      "ai": "^5.0.28",
      "arktype": "2.1.20",
      "babel-plugin-react-compiler": "19.1.0-rc.2",
      "better-auth": "^1.3.7",
      "drizzle-kit": "^0.31.4",
      "drizzle-orm": "^0.44.5",
      "nanoid": "^5.1.5",
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "sonner": "^2.0.7",
      "tailwindcss": "^4.1.12",
      "tw-animate-css": "^1.3.7",
      "typescript": "^5.9.2",
      "uuid": "^11.1.0",
      "vite": "^7.1.3",
      "zod": "^4.1.5"
    }
  }
}
