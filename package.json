{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "dev": "turbo run dev dev:types",
    "build": "turbo run build && pnpm run drizzle:migrate",
    "build:desktop": "turbo run @connnect/desktop#build",
    "drizzle:generate": "cd apps/web && pnpm run drizzle:generate",
    "drizzle:migrate": "cd apps/web && pnpm run drizzle:migrate",
    "check-types": "turbo check-types"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@eslint-react/eslint-plugin": "^1.31.0",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "happy-dom": "^17.4.3",
    "husky": "^9.1.7",
    "npm-run-all2": "^7.0.2",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "core-js",
      "esbuild",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
