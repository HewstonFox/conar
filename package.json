{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "dev": "turbo run dev",
    "build:desktop": "turbo run @connnect/desktop#build",
    "build:web": "turbo run @connnect/web#build",
    "start:web": "cd apps/web && pnpm run start",
    "start:api": "cd apps/api && pnpm run start",
    "drizzle:generate": "turbo run drizzle:generate",
    "drizzle:migrate": "turbo run drizzle:migrate",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint-react/eslint-plugin": "^1.49.0",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^17.4.7",
    "husky": "^9.1.7",
    "npm-run-all2": "^8.0.1",
    "tsx": "^4.19.4",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "core-js",
      "esbuild",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
